{% extends '@BkstgCore/layout.html.twig' %}
{% trans_default_domain 'BkstgNoticeBoardBundle' %}
{% if post.parent is not empty %}
  {% set page_title = 'post.reply_to'|trans %}
{% else %}
  {% set page_title = 'post.create_new'|trans %}
{% endif %}

{% block content %}
  {% if post.parent is not empty %}
    {# Display the post user is replying to. #}
    {% include '@BkstgNoticeBoard/Post/_show.html.twig' with { 'post': post.parent, 'production': production, 'show_actions': false } only %}
  {% endif %}

  {% include '@BkstgNoticeBoard/Post/_form.html.twig' %}
{% endblock %}

{% block stylesheets %}
  {{ parent() }}

  <!-- Notice board bundle CSS -->
  <link rel="stylesheet" href="{{ asset('bundles/bkstgnoticeboard/css/all.css') }}">
{% endblock %}

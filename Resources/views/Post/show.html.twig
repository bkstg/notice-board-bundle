{% set user = get_user(post.author) %}
<div id="post-{{ post.id }}" class="post container-fluid">
  <div class="row">
    <div class="col-1">
      {% include '@BkstgCore/Partials/profile-picture.html.twig' with { 'user': user } only %}
    </div>
    <div class="col-11">
      {{ post.body|raw }}
      <p><small>{{ 'Posted %date% by %author%'|trans({'%date%': post.created|time_diff, '%author%': user }) }}</small></p>
      {% if post.children is not empty %}
        {% for child in post.children %}
          {% include '@BkstgNoticeBoard/Post/show.html.twig' with { 'post':child } only %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

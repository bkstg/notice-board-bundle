{% extends '@BkstgCore/layout.html.twig' %}
{% set page_title = 'Notice Board' %}
{% block content %}
  <p>
    <a class="btn btn-primary" href="{{ url('bkstg_post_create', {'production_slug': production.slug}) }}">
      <i class="fa fa-plus"></i> {{ 'Create new post'|trans }}
    </a>
  </p>

  {% for post in posts %}
    {% include '@BkstgNoticeBoard/Post/show.html.twig' with { 'post': post, 'production': production } only %}
  {% endfor %}
  {{ knp_pagination_render(posts) }}
{% endblock %}
